{
  // ⚠️ CONFIGURACIÓN CRÍTICA: Previene pérdida de datos con Claude Code

  // AUTO-REFRESH: Recargar archivos modificados externamente
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/.git/**": true,
    "**/dist/**": true,
    "**/build/**": true,
    "**/.next/**": true,
    "**/coverage/**": true,
    "**/.cache/**": true,
    "**/tmp/**": true,
    "**/temp/**": true,
    "**/.claude/**": true
  },

  // AUTO-SAVE: Guardar automáticamente para evitar buffers sucios (optimizado para Claude Code)
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,
  "files.autoSaveWorkspaceFilesOnly": false,
  "files.refactoring.autoSave": false,

  // HOT EXIT: Evitar restaurar archivos con cambios no guardados (configurar en settings globales)

  // EDITOR: Revelar archivos modificados automáticamente
  "workbench.editor.revealIfOpen": true,
  "workbench.editor.highlightModifiedTabs": true,

  // GIT: Auto-refresh del estado de Git
  "git.autorefresh": true,
  "git.autofetch": true,

  // EXPLORER: Refrescar automáticamente el explorador
  "explorer.autoReveal": true,

  // SEARCH: Seguir enlaces simbólicos
  "search.followSymlinks": true,

  // TYPESCRIPT: Auto-refresh de tipos
  "typescript.preferences.includePackageJsonAutoImports": "auto",
  "typescript.suggest.autoImports": true,

  // EXTENSION SETTINGS para Claude Code
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },

  // NOTIFICACIONES: Alertar sobre cambios externos
  "problems.autoReveal": true,

  // PERFORMANCE: Optimizar para proyectos grandes
  "files.associations": {
    "*.md": "markdown"
  },

  // BREADCRUMBS: Mantener navegación actualizada
  "breadcrumbs.enabled": true,
  "breadcrumbs.filePath": "on",

  // MINIMAP: Reflejar cambios inmediatamente
  "editor.minimap.enabled": true,
  "editor.minimap.renderCharacters": false,

  // PERFORMANCE: Optimizaciones adicionales para Claude Code
  "files.maxMemoryForLargeFilesMB": 4096,
  "window.restoreWindows": "none",
  "window.newWindowDimensions": "default"
}