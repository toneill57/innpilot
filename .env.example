# InnPilot Environment Variables Template
# Copy this file to .env.local and fill in your values

# =============================================================================
# Supabase Configuration
# =============================================================================
NEXT_PUBLIC_SUPABASE_URL=your-supabase-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# =============================================================================
# AI APIs - Conversation Memory System
# =============================================================================
# CRITICAL: Both keys required for conversation memory compression & search
# Claude Haiku: Conversation compression (~$0.001/compression)
# OpenAI Embeddings: text-embedding-3-large 1024d (~$0.0001/embedding)
ANTHROPIC_API_KEY=your-anthropic-api-key
CLAUDE_MODEL=claude-3-5-haiku-20241022
CLAUDE_MAX_TOKENS=800

# OpenAI for embeddings (conversation memory search)
OPENAI_API_KEY=your-openai-api-key

# =============================================================================
# JWT Authentication
# =============================================================================
# Optional: JWT secret for staff/guest authentication
# If not set, a default development key will be used
JWT_SECRET_KEY=your-jwt-secret-key

# =============================================================================
# Analytics (Plausible)
# =============================================================================
# Domain registered in Plausible Analytics
# Example: simmerdown.house or innpilot.app
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=your-domain.com

# =============================================================================
# Application Configuration
# =============================================================================
# Base URL for the application (used in availability URLs)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Node environment
NODE_ENV=development

# =============================================================================
# MotoPress Hotel Booking Integration
# =============================================================================
# MotoPress uses Consumer Key/Secret for API authentication (WooCommerce style)
# Generate these in WordPress Dashboard → Users → Application Passwords
MOTOPRESS_KEY=your-motopress-consumer-key
MOTOPRESS_SECRET=your-motopress-consumer-secret
MOTOPRESS_URL=https://your-hotel-site.com

# Optional: WordPress Application Password (for other WordPress endpoints)
MOTOPRESS_USER=admin
MOTOPRESS_APP_PASS=your-wordpress-app-password

# =============================================================================
# Security - Credential Encryption
# =============================================================================
# 32-character encryption key for encrypting MotoPress credentials in database
# Generate with: openssl rand -base64 32
ENCRYPTION_KEY=your-32-char-encryption-key-change-in-production
